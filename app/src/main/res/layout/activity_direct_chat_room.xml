<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/direct_chat_room_activity"
    tools:context="edu.android.chatting_game.DirectChatRoomActivity">


    <ListView
        android:id="@+id/chatMessageListView"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        />

    <RelativeLayout
        android:id="@+id/innerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutMode="opticalBounds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:gravity="bottom|center">

        <ImageButton
            android:id="@+id/btnOption"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            app:srcCompat="@drawable/plus1"
            tools:style="@android:style/Widget.ImageButton" />

        <EditText
            android:id="@+id/writeMsg"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnOption"
            android:layout_centerHorizontal="true"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            app:srcCompat="@drawable/sent1" />
    </LinearLayout>

</RelativeLayout>
