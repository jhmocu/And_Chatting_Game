<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_recycler_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <ImageView
        android:id="@+id/editChatImageRoom"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/editChatTxtRoom"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editChatImageRoom"
        android:layout_toRightOf="@+id/editChatImageRoom"
        android:text="대화방 이름" />

    <TextView
        android:id="@+id/editChatTxtLastMsg"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/editChatImageRoom"
        android:layout_toRightOf="@+id/editChatImageRoom"
        android:text="마지막 메세지" />

    <TextView
        android:id="@+id/editChatTxtFriendCount"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editChatTxtRoom"
        android:layout_toRightOf="@+id/editChatTxtRoom"
        android:text="인원" />

    <CheckBox
        android:id="@+id/editChatcheckBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/editChatTxtLastMsg"
        android:layout_toRightOf="@+id/editChatTxtLastMsg"
        android:text=""
        android:layout_alignParentTop="true" />


</RelativeLayout>