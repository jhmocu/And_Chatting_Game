<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.android.chatting_game.SettingFragment">


    <Button
        android:id="@+id/btnNotice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="공 지 사 항"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btnFontChange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnNotice"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="채 팅 방 글 자 크 기 변 경"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btnBackgroundColorChange"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnFontChange"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="채 팅 방 배 경 변 경"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btnVersion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnBackgroundColorChange"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="버 전 정 보"
        android:textSize="23sp" />
</RelativeLayout>
